<Window x:Class="KillRing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KillRing"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="TextBox"/>
        <Label Grid.Row="1" Grid.Column="0" Content="TImeout (sec)" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="1" TextAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Width="60"/>
        <Button Grid.Row="1" Grid.Column="3" Content="Clear" Width="75"/>

    </Grid>
</Window>
